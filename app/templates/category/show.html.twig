{% extends 'base.html.twig' %}

{% block title %}
    {{'show_category_details'|trans}}
    {# {{ 'title_selected_task'|trans({'%id%': task.id|default('')}) }}#}
{% endblock %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <div>{{ app.user.username }}</div>
        <div>
            <a href="{{ url('app_logout') }}">{{ 'logout'|trans }}</a>
        </div>
    {% else %}
        <div>
            <a href="{{ url('app_login') }}">{{ 'log_in'|trans }}</a>
        </div>
    {% endif %}
    <h1>{{'title_selected_category'|trans}}</h1>

    {% if category is defined and category|length %}
        <dl class="dl-horizontal"> {# dl tag, a list with term and descriptions #}
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ category.id }}</dd>
            <dt>{{ 'label_created_at'|trans }}</dt>
            <dd>{{ category.createdAt|date('d/m/Y') }}</dd>
            <dt>{{ 'label_updated_at'|trans }}</dt>
            <dd>{{ category.updatedAt|date('d/m/Y') }}</dd>
            <dt>{{ 'label_title'|trans }}</dt>
            <dd>{{ category.title }}</dd>
        </dl>
    {% else %}
        {% include 'default/_single_flash_message.html.twig' with {
            type: 'warning',
            message: 'category_not_found'|trans
        } %}
    {% endif %}

    <a href="{{ url('book_index') }}">{{'all_books_list_back'|trans}}</a><br>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ url('category_index') }}">{{'all_category_list_back'|trans}}</a>
    {% endif %}

{% endblock %}
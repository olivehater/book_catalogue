{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_author_edit'|trans({'%title%': author.title|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_author_edit'|trans({'%title%': author.title|default('')}) }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('author_edit', {id: author.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('author_index') }}" class="btn btn-link">
            {{ 'all_authors_list_back'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}